{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "My Zuplo API"
  },
  "paths": {
    "/v1/blogs": {
      "x-zuplo-path": {
        "pathMode": "open-api"
      },
      "get": {
        "summary": "Get all blogs",
        "description": "Get all blogs generated by AI",
        "x-zuplo-route": {
          "corsPolicy": "none",
          "handler": {
            "export": "urlRewriteHandler",
            "module": "$import(@zuplo/runtime)",
            "options": {
              "rewritePattern": "${env.SUPABASE_URL}/rest/v1/blogs?orgId=eq.${request.user?.data?.orgId}"
            }
          },
          "policies": {
            "inbound": [
              "api-key-inbound",
              "rate-limit-inbound",
              "set-headers-inbound"
            ]
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "../schemas/blog.json"
                  },
                  "example": [
                    [
                      {
                        "id": "1",
                        "topic": "The curvature of earth",
                        "content": "The curvature of earth is a wonder, not a flat topic",
                        "created_at": "2021-10-10T10:10:10.000Z"
                      }
                    ]
                  ]
                }
              }
            }
          }
        },
        "operationId": "7d291eef-b7a8-4654-ad09-105ea86e5500"
      },
      "post": {
        "summary": "Create a blog using AI",
        "description": "Creates an AI generated blogpost of around 100 words given a topic.",
        "x-zuplo-route": {
          "corsPolicy": "anything-goes",
          "handler": {
            "export": "default",
            "module": "$import(./modules/generate-blog)",
            "options": {}
          },
          "policies": {
            "inbound": [
              "api-key-inbound",
              "rate-limit-inbound"
            ]
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "topic": {
                    "type": "string",
                    "description": "A topic of which the AI generated blogpost will be created about."
                  }
                },
                "example": {
                  "topic": "The curvature of earth"
                },
                "required": [
                  "topic"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/blog.json"
                }
              }
            }
          }
        },
        "operationId": "c77ba911-e0a1-432e-9e16-1ebf2c32b7ed"
      }
    },
    "operationId": "16a54c16-f4ed-4f1b-a443-62559b0916c6"
  }
}